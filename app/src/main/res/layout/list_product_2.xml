<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_image"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:maxWidth="200dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nhớt Động Cơ Xe Máy"
        android:textColor="#BF000000"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_image" />



    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="2000000"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/nameProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />




    <TextView
        android:id="@+id/categoryProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Phu Kien Xe "
        android:maxWidth="90dp"
        android:textColor="#BF060606"
        android:textSize="11dp"
        android:layout_marginEnd="5dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameProduct" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="#"
        android:maxWidth="90dp"
        android:textColor="#BF060606"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/categoryProduct"
        app:layout_constraintTop_toTopOf="@+id/nameProduct" />

    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/main_color"
        android:drawableLeft="@drawable/ic_shopping_cart"
        android:fontFamily="@font/poppins_semibold"
        android:text="Thêm"
        android:textColor="#060606"
        android:textSize="10sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoryProduct"
        app:layout_constraintTop_toBottomOf="@+id/categoryProduct" />




</androidx.constraintlayout.widget.ConstraintLayout>