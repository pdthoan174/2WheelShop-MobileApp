<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/titleRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Register for user"
        android:textColor="#BF131313"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:layout_width="154dp"
        android:layout_height="150dp"
        android:src="@drawable/shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Wellcome to Shop2Wheel "
        android:textColor="#BF131313"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRegister" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />



    <LinearLayout
        android:id="@id/editTextOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail">
        <EditText
            android:id="@+id/textOTP"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:hint="Mã OTP"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:paddingTop="10dp"

            android:textColor="#B3000000"
            android:textColorHint="#B3000000"
            android:textSize="15sp"
            android:autofillHints="" />

        <Button

            android:id="@+id/btn_get_otp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:backgroundTint="#5FB1B6"
            android:textColor="#535151"
            android:fontFamily="@font/poppins_bold"
            android:text="Lấy mã"
            android:textSize="10sp"
            android:background="@drawable/button_border"
            app:layout_constraintBottom_toTopOf="@+id/sign_in"
            app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextPassword" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOTP" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"

        android:hint="Địa chỉ"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"

        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"

        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="#B3000000"
        android:textColorHint="#B3000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#50C2C9"
        android:fontFamily="@font/poppins_semibold"
        android:text="Đăng kí"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/sign_in"
        app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text=""
        android:textColor="#BFFA0202"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins"
        android:text="Alrealy have an account ? Sign In"
        android:textColor="#50C2C9"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>