<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemOrder"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="50dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd= "5dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_text"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="0.2"
        android:fontFamily="@font/poppins_bold"
        android:text="1"
        android:layout_gravity="center_vertical"
        android:textColor="#BF000000"
        android:textSize="10sp"
         />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#7A7979"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxWidth="200dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/poppins"
        android:text="25-02-2023"
        android:layout_weight="1.4"

        android:textColor="#BF000000"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/item_image"
        app:layout_constraintTop_toTopOf="@+id/item_image" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="10dp"
        android:background="#7A7979"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="2000000"
        android:textColor="#BF000000"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:textSize="11sp"
        android:layout_weight="1.5"

        app:layout_constraintStart_toStartOf="@+id/nameProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="10dp"
        android:background="#7A7979"/>


    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Phường: Võ Ninh, Quận: Quảng Ninh, Tỉnh: Quảng Bình"
        android:maxLines="3"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:maxWidth="140dp"
        android:textColor="#BF060606"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:layout_weight="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameProduct" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="10dp"
        android:background="#7A7979"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Chờ xác nhận"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:maxWidth="50dp"
        android:textColor="#BF060606"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#7A7979"/>

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:src="@drawable/ic_delete"
        app:tint="#E63333" />


</LinearLayout>